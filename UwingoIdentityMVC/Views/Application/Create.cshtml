@model ApplicationDto

@{
    ViewBag.Title = "Uygulama Oluştur";
}

<h2>Uygulama Oluştur</h2>

<form id="createApplicationForm" asp-action="Create">
    <div class="form-group">
        <label for="Name">Ad</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="DbConnection">Veritabanı Bağlantısı</label>
        <input type="text" class="form-control" id="DbConnection" name="DbConnection" required />
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
